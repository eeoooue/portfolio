---
// Props
const {
  href,
  imageSrc,
  alt = "",
  heading = "",
  caption = "",
  width = "380px",
  height = "260px"
} = Astro.props;
---
<style>
  .card {
    max-width: var(--card-width);
    max-height: var(--card-height);
    display: block;
    text-decoration: none;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    background: white;
    margin: 20px;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 14px rgba(0,0,0,0.15);
  }

  .card img {
    width: 100%;
    height: 60%;
    object-fit: cover;
    display: block;
  }

  .card-text {
    height: 40%;
    padding: 0.75rem 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: black;
  }

  .card-heading {
    font-size: 1.1rem;
    font-weight: bold;
    margin: 0 0 0.25rem;
  }

  .card-caption {
    font-size: 0.9rem;
    margin: 0;
    color: #555;
  }
</style>

<a
  href={href}
  class="card"
  style={`--card-width: ${width}; --card-height: ${height};`}
>
  <img src={imageSrc} alt={alt} />
  <div class="card-text">
    <div class="card-heading">{heading}</div>
    <p class="card-caption">{caption}</p>
  </div>
</a>
