---
// Props
const { src, alt = "", size = "100px" } = Astro.props;
---
<style>
  .image-bubble {
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    overflow: hidden;
    display: inline-block;
  }

  .image-bubble img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
</style>

<div class="image-bubble" style={`--size: ${size};`}>
  <img src={src} alt={alt} />
</div>
